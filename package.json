  "description": "Backend API for AGM Store Builder - E-commerce platform for Nigerian entrepreneurs",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "migrate": "node dist/database/migrate.js",
    "seed": "node dist/database/seed.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "ecommerce",
    "store-builder",
    "nigeria",
    "monnify",
    "payments",
    "express",
    "typescript"
